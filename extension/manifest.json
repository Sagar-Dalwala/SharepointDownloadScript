{
    "manifest_version": 3,
    "name": "SharePoint Video Manifest Collector",
    "version": "1.0",
    "description": "Automatically captures videomanifest URLs from SharePoint/Teams recordings",
    "permissions": [
        "webRequest",
        "storage"
    ],
    "host_permissions": [
        "*://*.sharepoint.com/*",
        "*://*.microsoftonline.com/*",
        "*://*.microsoft.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}